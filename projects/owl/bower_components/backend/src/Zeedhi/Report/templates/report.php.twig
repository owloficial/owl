		{# 
			<div><span>Emissão - </span><span>{{report.getIssuanceDate()}}</span></div>
			<div><span>Versão - </span><span>{{report.version}}</span></div> -->
		<!-- #} -->
	<!-- </div> -->
{% endblock page_header %}


{% block content %}
	<table class="identifier" summary="Tabela de orçamento gasto mensal é anual.">
		{% for band in report.getBands() %}
				{% if band.type == "S" %}
					<tfoot>
						<tr class="group-footer-line-space">
							{% for field in band.getFields() %}
								<td colspan="{{ report.numColumns }}">{{ field.getLabel() }}: {{ field.getValue() }}</td>
							{% endfor %}
						</tr>
					</tfoot>
				{% else %}
					<thead>
						<tr>
							{% for field in band.getFields() %}
								<th class="group-header">{{ field.label }}</th>
							{% endfor %}
						</tr>
					</thead>
					{% for group in report.getGroups() %}
						{% block band_group_header %}
							<tr class="aggregation-header-band">
								<div class="group-header">
										<th colspan="{{ report.numColumns }}">
									{% for headerField in group.getHeader().getFields() %}
											{{headerField.getLabel()}}: {{headerField.getValue()}}
									{% endfor %}
										</th>
								</div>
							</tr>
						{% endblock band_group_header %}
						<tbody>
						{% block band_detail %}
							{% for row in group.getDataset() %}
								<tr>
									{% for gridField in band.getFields() %}
										<td>
											{{ formatterApplier.apply(row[gridField.getName()], gridField)|raw }}
										</td>
									{% endfor %}
								</tr>
							{% endfor %}
						{% endblock band_detail %}
						</tbody>
						{% block band_group_footer %}
							<tr class="aggregation-footer-band">
								{% for footerField in group.getFooter().getFields() %}
									<th class="group-footer" colspan="{{ (band.getFields()|length) / (group.getFooter().getFields()|length) }}">
										<span>{{footerField.getLabel()}}: </span><span>{{footerField.getValue()}}</span>
									</th>
								{% endfor %}
							</tr>
						{% endblock band_group_footer %}
					{% endfor %}
				{% endif %}
		{% endfor %}
	</table>
{% endblock content %}


{% block page_footer %}
	<tr class="aggregation-footer-band">
		<div class="group-footer">
			{% for footerField in group.getFooter().getFields() %}
				<td><span>{{ field.getLabel() }}: </span><span>{{ field.getValue() }}</span></td>
			{% endfor %}
		</div>
	</tr>
{% endblock page_footer %}